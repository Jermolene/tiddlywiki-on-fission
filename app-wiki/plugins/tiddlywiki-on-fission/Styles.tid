/* Main UI */

.tc-fission-ui {
	margin: 1em 0.5em;
}

@media (min-width: 760px) {
	.tc-fission-ui {
		width: 660px;
		margin: 1em auto;
	}
}

/* Branding */

.tc-fission-branding {
	text-align: center;
	margin-bottom: 4em;
}

.tc-fission-branding h1 {
	font-weight: bold;
}

/* Panels */

.tc-fission-panel {
	margin-bottom: 2em;
	padding: 1em 2em;
	background-color: #ffffff;
	border-radius: 12px;
	<<box-shadow "1px 1px 5px rgba(0, 0, 0, 0.3)">>
}

.tc-fission-panel h2 {
	font-weight: bold;
}

/* Warning Animation */

.tc-fission-warning {
	font-weight: bold;
	padding: 0 1em;
	margin-left: -1em;
	margin-right: -1em;
	color: #f22;
	border-radius: 4px;
	border: 3px solid transparent;
	background: #ffd;
	background: linear-gradient(#ffd, #ffd) padding-box, repeating-linear-gradient(-45deg, red 0, red 25%, transparent 0, transparent 50%) 0 / .6em .6em;
	animation: marching-ants 20s linear infinite;
}
 
@keyframes marching-ants { to { background-position: 100% 100% } }

/* File Picker */

.tc-fission-file-picker ol {
	list-style: none;
	padding-left: 1em;
}

.tc-fission-file-picker > ol {
	padding-left: 0;
}

.tc-fission-file-picker-heading {
}

.tc-fission-file-picker-folder-button,
.tc-fission-file-picker-file-button,
.tc-fission-file-picker-unknown-file {
	background: none;
	border: none;
	cursor: pointer;
	color: <<colour foreground>>;
	fill: <<colour foreground>>;
    padding: 4px 8px;
    border-radius: 6px;
    margin-bottom: 8px;
}

